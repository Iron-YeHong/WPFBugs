<Window x:Class="WPFBugs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Title="WPF Bugs" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="DemiBold"></Setter>
            <Setter Property="Foreground" Value="LightSeaGreen"/>
            <Setter Property="BorderBrush" Value="LightSeaGreen"/>
        </Style>
    </Window.Resources>
    <Grid>
        <WrapPanel Margin="10">
            <Button x:Name="IMEPositionButton" Content="IME Position while TextBox in Popup" Click="IMEPositionButton_OnClick"/>
        </WrapPanel>
    </Grid>
</Window>
